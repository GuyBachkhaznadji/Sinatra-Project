<section class="form-area"> 
  <form class="form" method="post" action="/creatures">
    <label for="name-field">Name:</label>
    <input
    type="text"
    name="name"
    id="name-field"
    />
    <label for="level-field">Level:</label>
    <input
    type="number"
    name="level"
    id="level-field"
    value="1"
    />
    <label for="capture-date-field">Capture Date:</label>
    <input
    type="date"
    name="capture_date"
    id="capture-date-field"
    value="<%=Date.today%>"
    />  
    <label for="types-field">Type</label>
    <ul>
      <% @all_types.each do |type| %>
      <li><%=type%>
        <input
        type="radio"
        name="type"
        id="type-field"
        value="<%=type%>"
        />
      </li>
      <% end %>
    </ul> 
    <ul>
      <label for="fightable-field">Ready to Fight?</label>
      <li>Ready
        <input
        type="radio"
        name="fightable"
        id="fightable-field"
        value="t"
        />
      </li>
      <li>Not Ready
        <input
          type="radio"
          name="fightable"
          id="fightable-field"
          value="f"
          />
        </li>
      </ul>
    <input type="submit" value="Add Creature">
  </form>
  <article class="filler">
  </article>
</section>