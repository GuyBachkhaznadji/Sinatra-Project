<section class="form-area">
  <form class="form" method="post" action="/gladiators/<%=@id%>">
    <label for="name-field">Name:</label>
    <input
    type="text"
    name="name"
    id="name-field"
    value="<%=@gladiator.name%>"
    />
    <label for="level-field">Level:</label>
    <input
    type="number"
    name="level"
    id="level-field"
    value="<%=@gladiator.level%>"
    />
    <label for="exp-field">Experience:</label>
    <input
    type="number"
    name="exp"
    id="exp-field"
    value="<%=@gladiator.exp%>"
    />
    <input type="submit" value="Update Gladiator">
  </form>
  <article class="filler">
  </article>
</section>